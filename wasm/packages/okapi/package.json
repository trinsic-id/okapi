{
  "name": "@trinsic/okapi",
  "version": "1.5.0",
  "description": "Okapi native binaries wrapper for node and web.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "browser": {
    "./lib/index.js": "./lib/index.web.js"
  },
  "files": [
    "lib/*"
  ],
  "scripts": {
    "build": "npm run build:node && npm run build:browser",
    "build:proto": "pwsh ./Generate-Proto.ps1",
    "build:node": "npx tsc -p tsconfig.node.json",
    "build:browser": "npx tsc -p tsconfig.browser.json",
    "build:wasm:node": "npx wasm-pack build --target nodejs",
    "build:wasm:browser": "npx wasm-pack build --target bundler",
    "test": "ts-node ./node_modules/jasmine/bin/jasmine --config=./spec/support/jasmine.json"
  },
  "author": "Tomislav Markovski",
  "license": "ISC",
  "dependencies": {
    "google-protobuf": "^3.20.1",
    "long": "^5.2.0"
  },
  "devDependencies": {
    "@types/google-protobuf": "^3.7.4",
    "@types/node": "^14.14.7",
    "jasmine": "^4.1.0",
    "copyfiles": "^2.4.0",
    "recursive-copy-cli": "^1.0.20",
    "esm": "^3.2.25",
    "ts-proto": "^1.112.0",
    "http-serve": "^1.0.1",
    "typescript": "^4.0.5",
    "wasm-pack": "^0.10.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/trinsic-id/okapi.git",
    "directory": "wasm/packages/okapi"
  }
}
